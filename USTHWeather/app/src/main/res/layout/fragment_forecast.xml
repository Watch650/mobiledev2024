<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ForecastFragment">

    <FrameLayout
        android:id="@+id/tile"
        android:layout_height="200px"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:padding="50px"
        android:background="#5061BB">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:gravity="center"
            android:text="USTH Weather"/>
        <LinearLayout
            android:layout_width="250px"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:gravity="center">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:layout_weight="0.5"
                android:src="@drawable/reload"
                app:tint="@color/white" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:layout_weight="0.5"
                android:src="@drawable/settings"
                app:tint="@color/white" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/tile_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="50px"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/tile1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="0.1"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:padding="20px"
            android:background="#DFDFFF">
            <TextView
                android:layout_width="200px"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Mon"/>
            <ImageView
                android:layout_width="200px"
                android:layout_height="match_parent"
                android:src="@drawable/cloudy" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Partly Cloudy\n24C - 31C"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tile2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:padding="20px"
            android:background="#DFDFFF">
            <TextView
                android:layout_width="200px"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Tue"/>
            <ImageView
                android:layout_width="200px"
                android:layout_height="match_parent"
                android:src="@drawable/rainy"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Showers\n24C - 30C"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tile3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:padding="20px"
            android:background="#DFDFFF">
            <TextView
                android:layout_width="200px"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Wed"/>
            <ImageView
                android:layout_width="200px"
                android:layout_height="match_parent"
                android:src="@drawable/rainy"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Rain\n22C - 23C"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tile4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:padding="20px"
            android:background="#DFDFFF">
            <TextView
                android:layout_width="200px"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Thu"/>
            <ImageView
                android:layout_width="200px"
                android:layout_height="match_parent"
                android:src="@drawable/storm"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Scattered Showers\n22C - 27C"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tile5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:padding="20px"
            android:background="#DFDFFF">
            <TextView
                android:layout_width="200px"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Fri"/>
            <ImageView
                android:layout_width="200px"
                android:layout_height="match_parent"
                android:src="@drawable/cloudy"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Mostly Cloudy\n22C - 30C"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tile6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:padding="20px"
            android:background="#DFDFFF">
            <TextView
                android:layout_width="200px"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Sat"/>
            <ImageView
                android:layout_width="200px"
                android:layout_height="match_parent"
                android:src="@drawable/cloudy"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Partly Cloudy\n24C - 31C"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tile7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:padding="20px"
            android:background="#DFDFFF">
            <TextView
                android:layout_width="200px"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Sun"/>
            <ImageView
                android:layout_width="200px"
                android:layout_height="match_parent"
                android:src="@drawable/thunder"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Thunderstorms\n25C - 28C"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tile8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:padding="20px"
            android:background="#DFDFFF">
            <TextView
                android:layout_width="200px"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Mon"/>
            <ImageView
                android:layout_width="200px"
                android:layout_height="match_parent"
                android:src="@drawable/storm"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Scattered Thunderstorms\n24C - 27C"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tile9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:padding="20px"
            android:background="#DFDFFF">
            <TextView
                android:layout_width="200px"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Tue"/>
            <ImageView
                android:layout_width="200px"
                android:layout_height="match_parent"
                android:src="@drawable/rainy"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Showers\n24C - 26C"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tile10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:padding="20px"
            android:background="#DFDFFF">
            <TextView
                android:layout_width="200px"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Wed"/>
            <ImageView
                android:layout_width="200px"
                android:layout_height="match_parent"
                android:src="@drawable/storm"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Scattered Thunderstorms\n23C - 27C"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>